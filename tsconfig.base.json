{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2023"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/client/*"]
    }
  },
  "files": [],
  "include": [],
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/build",
    "**/.turbo",
    "**/.next",
    "**/coverage",
    "**/.cache",
    "**/tmp",
    "**/test-results",
    "**/playwright-report",
    "**/allure-results",
    "**/.tmp"
  ],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.node.json"
    },
    {
      "path": "./tsconfig.server.json"
    }
  ]
}

